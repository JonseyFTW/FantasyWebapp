# Production Environment Template for Railway Frontend
# Copy these variables to your Railway service environment variables

# NextAuth Configuration
NEXTAUTH_URL=${{RAILWAY_STATIC_URL}}
NEXTAUTH_SECRET=${{NEXTAUTH_SECRET}}

# OAuth Providers
GOOGLE_CLIENT_ID=${{GOOGLE_CLIENT_ID}}
GOOGLE_CLIENT_SECRET=${{GOOGLE_CLIENT_SECRET}}
DISCORD_CLIENT_ID=${{DISCORD_CLIENT_ID}}
DISCORD_CLIENT_SECRET=${{DISCORD_CLIENT_SECRET}}

# Database (shared with backend)
DATABASE_URL=${{DATABASE_URL}}

# API Endpoints (Railway internal URLs)
NEXT_PUBLIC_BACKEND_URL=${{BACKEND_SERVICE_URL}}
NEXT_PUBLIC_AI_SERVICE_URL=${{AI_SERVICE_URL}}
NEXT_PUBLIC_WEBSOCKET_URL=${{BACKEND_SERVICE_URL}}

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Development/Production
NEXT_PUBLIC_DEV_MODE=false
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1